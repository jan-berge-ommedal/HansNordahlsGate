<div class="row">
    <div class="section-title text-center">
        <a href="#{{housePath}}">
            <h3>{{houseName}}</h3>
        </a>
        <p>Kontaktskjema</p>
    </div>
</div>


<div class="row contact marginTop40">
    <div class="col-md-12">
        <form class="contactForm">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" class="form-control name" placeholder="Navn *" required="required">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control email" placeholder="Epost *" required="required">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control phone" placeholder="Telefon *">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <textarea class="form-control message" placeholder="Melding *" required="required"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-lg-12 text-center">
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary">Send melding</button>
                </div>

            </div>
            <div class="alert alert-success marginTop40 success">Innsending av kontaktskjema var vellykket</div>
        </form>
    </div>
</div>